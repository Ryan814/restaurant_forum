<div class="container">
  <div class="row">
    
    <div>
      <ul class="nav nav-pills nav-pills-center">
        <li role="presentation" class="active"><%= link_to "全部餐廳", root_path %></li>
        <% @categories.each do |category| %>
          <li role="presentation"><%= link_to category.name, category_path(category) %></li>
        <% end %>
      </ul>
    </div>
    <br>
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <% for img_id in 1..20 %>
            <% if image_path(restaurant.image).include?('/'+img_id.to_s+'.jpg') %>
              <%= image_tag('/seed_img/'+img_id.to_s+'.jpg', class: "img-responsive center-block") %>
            <% end %>
          <% end %>
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p class="label label-default"><%= restaurant.category_name %></p>
            <p><%= truncate(restaurant.description, length:80) %></p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="col-sm-12">
      <div class="text-center">
        <%= paginate @restaurants%>
      </div>
    </div>
  
  </div>
</div>