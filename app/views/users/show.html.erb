<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <div class="page-header">
        <div class="col-md-3 col-sm-4">
          <div class="text-center">
            <%= image_tag @user.avatar, class: "img-responsive img-rounded"%>
          </div>
        </div>
        
        <div class="col-md-9 col-sm-8">
          <h2><%= @user.name %></h2>  
          <p><strong><%= @user.email %></strong></p>
          <div><%= simple_format @user.intro %></div>
          
          <% if @user.email == current_user.email %>
            <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
          <% end %>
        </div>

        <div class="clearfix"></div>
      </div>

      <br>

      <div class="panel panel-default panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= @commented_restaurants.count.to_s + "已評論餐廳" %></h3>
        </div>
        <div class="panel-body panel-body-noline">
          <% @commented_restaurants.each do |restaurant|%>
            <%= link_to(restaurant) do %>
              <div class="my-restaurant">
                <div>
                  <%= image_tag restaurant.image, class: "img-rounded"%>
                </div>
                <div>
                  <p><%= restaurant.name %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    
    </div>
  </div>
</div>